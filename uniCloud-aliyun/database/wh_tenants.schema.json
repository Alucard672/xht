{
  "bsonType": "object",
  "required": ["name", "owner_uid", "created_at"],
  "permission": {
    "read": "auth.uid != null",
    "create": "auth.uid != null",
    "update": "auth.uid != null",
    "delete": "false"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "description": "店铺名称",
      "trim": "both"
    },
    "owner_uid": {
      "bsonType": "string",
      "description": "店主UID",
      "foreignKey": "uni-id-users._id"
    },
    "logo_url": {
      "bsonType": "string",
      "description": "店铺Logo"
    },
    "phone": {
      "bsonType": "string",
      "description": "联系电话"
    },
    "status": {
      "bsonType": "int",
      "description": "状态: 0-待审核, 1-正常, 2-已冻结, 3-已过期",
      "defaultValue": 0
    },
    "expired_at": {
      "bsonType": "timestamp",
      "description": "服务到期时间"
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "settings": {
      "bsonType": "object",
      "description": "店铺设置",
      "properties": {
        "allow_debt": {
          "bsonType": "bool",
          "description": "是否允许赊账",
          "defaultValue": true
        },
        "min_delivery_price": {
          "bsonType": "int",
          "description": "起送价(分)",
          "defaultValue": 0
        }
      }
    }
  }
}
