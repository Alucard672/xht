{
  "bsonType": "object",
  "required": ["name", "owner_uid", "created_at"],
  "permission": {
    "read": "auth.uid != null",
    "create": "auth.uid != null",
    "update": "auth.uid != null",
    "delete": "false"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "description": "店铺名称",
      "trim": "both"
    },
    "owner_uid": {
      "bsonType": "string",
      "description": "店主UID",
      "foreignKey": "uni-id-users._id"
    },
    "phone": {
      "bsonType": "string",
      "description": "联系电话"
    },
    "status": {
      "bsonType": "int",
      "description": "状态: 0-待审核, 1-正常, 2-已冻结, 3-已过期",
      "defaultValue": 0
    },
    "expired_at": {
      "bsonType": "timestamp",
      "description": "服务到期时间（原始注册时设置）"
    },
    "oa_expired_at": {
      "bsonType": "timestamp",
      "description": "OA系统设置的到期时间（优先使用此字段）"
    },
    "oa_password": {
      "bsonType": "string",
      "description": "OA系统设置的商家登录密码（md5加密）"
    },
    "oa_updated_by": {
      "bsonType": "string",
      "description": "最后由哪个OA用户修改"
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "updated_at": {
      "bsonType": "timestamp",
      "description": "更新时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
}
