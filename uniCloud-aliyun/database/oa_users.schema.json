{
  "bsonType": "object",
  "required": ["username", "password", "nickname", "role"],
  "permission": {
    "read": "doc.role == 'super_admin' || (doc._id == auth.uid)",
    "create": "auth != null && doc.role == 'super_admin'",
    "update": "auth != null && (doc.role == 'super_admin' || doc._id == auth.uid)",
    "delete": "auth != null && doc.role == 'super_admin'"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "username": {
      "bsonType": "string",
      "description": "登录账号",
      "trim": "both"
    },
    "password": {
      "bsonType": "string",
      "description": "密码（md5加密）"
    },
    "nickname": {
      "bsonType": "string",
      "description": "姓名",
      "trim": "both"
    },
    "role": {
      "bsonType": "string",
      "description": "角色: super_admin-超级管理员, admin-管理员, employee-员工"
    },
    "status": {
      "bsonType": "int",
      "description": "状态: 0-启用, 1-禁用",
      "defaultValue": 0
    },
    "last_login_at": {
      "bsonType": "timestamp",
      "description": "最后登录时间"
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "updated_at": {
      "bsonType": "timestamp",
      "description": "更新时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
}
